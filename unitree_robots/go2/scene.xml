<mujoco model="go2 scene">
  <include file="go2.xml"/>

  <statistic center="0 0 0.1" extent="0.8"/>

  <visual>
    <headlight diffuse="0.6 0.6 0.6" ambient="0.3 0.3 0.3" specular="0 0 0"/>
    <rgba haze="0.15 0.25 0.35 1"/>
    <global azimuth="-130" elevation="-20"/>
  </visual>

  <asset>
    <texture type="skybox" builtin="gradient" rgb1="0.3 0.5 0.7" rgb2="0 0 0" width="512" height="3072"/>
    <texture type="2d" name="groundplane" builtin="checker" mark="edge" rgb1="0.2 0.3 0.4" rgb2="0.1 0.2 0.3"
      markrgb="0.8 0.8 0.8" width="300" height="300"/>
    <material name="groundplane" texture="groundplane" texuniform="true" texrepeat="5 5" reflectance="0.2"/>
  </asset>

  <worldbody>
    <light pos="0 0 1.5" dir="0 0 -1" directional="true"/>
    <geom name="floor" size="0 0 0.05" type="plane" material="groundplane"/>

    <!-- Slope -->
      <body name="up_ramp" pos="1.1 0 0.1" euler="0 0 -1.5708">
            <geom type="box" size="1 1 0.1" pos="0 0 0" euler="0.3 0 0" rgba="0.5 0.5 0.5 1" friction="1.0 0.1 0.01"/>
      </body>
      <body name="platform" pos="2.9 0 0.38" euler="0 0 0">
            <geom type="box" size="0.9 1 0.1" pos="0 0 0" rgba="0.5 0.5 0.5 1" friction="1.0 0.1 0.01"/>
      </body>
      <body name="down_ramp" pos="4.7 0 0.1" euler="0 0 -1.5708">
            <geom type="box" size="1 1 0.1" pos="0 0 0" euler="-0.3 0 0" rgba="0.5 0.5 0.5 1" friction="1.0 0.1 0.01"/>
      </body>
      
      <body name="single_staircase" pos="7 0 0.12">
            <geom type="box" size="0.5 1 0.12" pos="0.3 0 0.0" rgba="0.5 0.5 0.5 1"/>
      </body>
      
      <body name="staircases" pos="10 0 0.075">
            <geom type="box" size="0.5 1 0.075" pos="0.4 0 0.0" rgba="0.5 0.5 0.5 1"/>
            <geom type="box" size="0.5 1 0.075" pos="0.8 0 0.15" rgba="0.5 0.5 0.5 1"/>
            <geom type="box" size="0.5 1 0.075" pos="1.2 0 0.3" rgba="0.5 0.5 0.5 1"/>
            <geom type="box" size="0.5 1 0.075" pos="1.6 0 0.45" rgba="0.5 0.5 0.5 1"/>
            <geom type="box" size="0.5 1 0.075" pos="2.0 0 0.6" rgba="0.5 0.5 0.5 1"/>
            <geom type="box" size="0.5 1 0.075" pos="2.4 0 0.75" rgba="0.5 0.5 0.5 1"/>
            <geom type="box" size="0.5 1 0.075" pos="2.8 0 0.9" rgba="0.5 0.5 0.5 1"/>
      </body>
      
  </worldbody>
</mujoco>
